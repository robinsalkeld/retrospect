<project name="MyProject" default="all" basedir=".">

  <target name="jar" >
    <jar jarfile="retrospect_agent.jar" manifest="${basedir}/META-INF/MANIFEST.MF">
    	<zipfileset src="${basedir}/lib/asm-debug-all-4.0.jar"/>
      <fileset dir="bin" includes="edu/ubc/mirrors/**"/>
    	<fileset dir="${basedir}" includes="META-INF/services/**"/>
    </jar>
  	
  </target>
	
	<target name="clean" >
		<delete>
    	<fileset dir="${basedir}">
    	    <include name="retrospect_agent.jar"/>
    	</fileset>
    </delete>
	</target>
	
	<target name="all" depends="clean, jar"/>
</project>